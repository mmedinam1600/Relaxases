                    div(class="embed-responsive embed-responsive-16by9")
                        iframe(width="853" height="480" src="https://www.youtube.com/embed/degKbH3z2qU" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
        // /.Slides
        // Controls
        a.carousel-control-prev(href='#video-carousel-example', role='button', data-slide='prev')
            span.carousel-control-prev-icon(aria-hidden='true')
