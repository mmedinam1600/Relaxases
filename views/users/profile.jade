extends ../Layout_Users.jade
block content
    .container.emp-profile
        form(method='post')
            .row
                .col-md-4
                    .profile-img
                        if user.genero === "Masculino"
                            //i(class="sprite sprite-hombre1")
                            img(src='/images/default_Icons/img_avatar.png', alt='Profile' class="img-thumbnail")
                        else if user.genero === "Femenino"
                            //i(class="sprite sprite-mujer1-perfil")
                            img(src='/images/default_Icons/avatar5.png', alt='Profile' class="img-thumbnail")
                        //img(src='/images/default_Icons/img_avatar.png', alt='Profile' class="img-thumbnail")
                        //.file.btn.btn-lg.btn-primary
                            | Cambiar Foto
                            input(type='file', name='file')
                .col-md-6
                    .profile-head
                        h5
                            | #{user.nombre}
                        h6
                            | #{user.email}
                        //p.proile-rating
                            | RANKINGS :
                            span 8/10
                        br
                        br
                        ul#myTab.nav.nav-tabs(role='tablist')
                            li.nav-item
                                a#home-tab.nav-link.active(data-toggle='tab', href='#home', role='tab', aria-controls='home', aria-selected='true') Información Personal
                            li.nav-item
                                a#profile-tab.nav-link(data-toggle='tab', href='#profile', role='tab', aria-controls='profile', aria-selected='false') Historial
                .col-md-2
                    //i(class="fas fa-user-edit")
                    button(class="btn btn-secondary" type="submit")
                        div(class="fas fa-user-edit")
                        |   Editar Perfil
                    //input.profile-edit-btn(type='submit', name='btnAddMore', value='Edit Profile')
            .row
                .col-md-4
                    .profile-work
                        p Links Útiles
                        a(href='/changepassword') Cambiar contraseña
                        br
                        a(href='/stats') Mis Estadisticas
                        br
                        a(href='/logout') Cerrar Sesión
                        //p SKILLS
                        //a(href='') Web Designer
                        //br
                        //a(href='') Web Developer
                        //br
                        //a(href='') WordPress
                        //br
                        //a(href='') WooCommerce
                        //br
                        br
                    a(href='' class="btn btn-danger") Borrar Cuenta
                    br
                .col-md-8
                    #myTabContent.tab-content.profile-tab
                        #home.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='home-tab')
                            .row
                                .col-md-6
                                    label Nombre
                                .col-md-4
                                    p #{user.nombre}
                            .row
                                .col-md-6
                                    label Apellido
                                .col-md-4
                                    p #{user.apellido}
                            .row
                                .col-md-6
                                    label Correo Electrónico
                                .col-md-4
                                    p #{user.email}
                            .row
                                .col-md-6
                                    label CURP
                                .col-md-4
                                    p #{user.curp}
                            .row
                                .col-md-6
                                    label Edad
                                .col-md-4
                                    p #{user.edad}
                            .row
                                .col-md-6
                                    label Género
                                .col-md-4
                                    p #{user.genero}
                            .row
                                .col-md-6
                                    label Fecha de Nacimiento
                                .col-md-4
                                    p #{user.fec_nac}
                        #profile.tab-pane.fade(role='tabpanel', aria-labelledby='profile-tab')
                            .row
                                .col-md-6
                                    label Aqui va la tabla de mediciones anteriores
                                .col-md-6
                                    p TABLA
                            //.row
                                .col-md-6
                                    label Hourly Rate
                                .col-md-6
                                    p 10$/hr
                            //.row
                                .col-md-6
                                    label Total Projects
                                .col-md-6
                                    p 230
                            //.row
                                .col-md-6
                                    label English Level
                                .col-md-6
                                    p Expert
                            //.row
                                .col-md-6
                                    label Availability
                                .col-md-6
                                    p 6 months
